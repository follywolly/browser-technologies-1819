<% include ../partials/head %>

  <!-- include ../partials/header -->

  <div class="container">
    <a href="/" aria-label="return to home" class="return">
      <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="16" height="16" viewBox="0 0 16 16">
        <defs>
          <linearGradient id="linear-gradient" x1="0.5" x2="0.5" y2="1" gradientUnits="objectBoundingBox">
            <stop offset="0" stop-color="#ff5858"/>
            <stop offset="1" stop-color="#f09819"/>
          </linearGradient>
        </defs>
        <g id="Symbol_24_1" data-name="Symbol 24 â€“ 1" transform="translate(-1254 -507)">
          <path id="Path_10" data-name="Path 10" d="M8,0,6.545,1.455l5.506,5.506H0V9.039H12.052L6.545,14.545,8,16l8-8Z" transform="translate(1254 507)" fill="url(#linear-gradient)"/>
        </g>
      </svg>
    </a>
    <form action="/search" class="search__form result" method="POST">
      <label class="hidden" for="query">Fill in your location</label><!--
      --><input name="query" id="query" type="text" placeholder="Fill in a location" value="<%= query %>"><!--
      --><button id="submit" type="submit" aria-label="Search">
        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="16" height="16" viewBox="0 0 16 16">
          <defs>
            <linearGradient id="linear-gradient" x1="0.5" x2="0.5" y2="1" gradientUnits="objectBoundingBox">
              <stop offset="0" stop-color="#ff5858"/>
              <stop offset="1" stop-color="#f09819"/>
            </linearGradient>
          </defs>
          <g id="Compose" transform="translate(-290 -237)">
            <rect id="Rectangle_324" data-name="Rectangle 324" width="16" height="16" transform="translate(290 237)" fill="none"/>
            <path id="Path_110" data-name="Path 110" d="M8.154,3.077,2.462,8.923,0,16l7.077-2.308L12.769,8Zm7.231-.462-2-2a1.865,1.865,0,0,0-2.769,0L8.923,2.308l4.615,4.769,1.846-1.846A1.95,1.95,0,0,0,16,3.846,1.9,1.9,0,0,0,15.385,2.615Z" transform="translate(290 237)" fill="url(#linear-gradient)"/>
          </g>
        </svg>

      </button>
    </form>
    <button type="button" name="button" id="list-button">Switch to list view</button>
    <div id="map">
    </div>
    <div id="result">
      <% if (query) { %>
        <div>From <%= query %>:</div>
      <% } %>

      <% if (steps && steps.length > 0) { %>
        <ol>
          <% steps.forEach((step)=> { %>
            <li><%= step.mod %> <%= step.type %>: <%= step.instruction %> in <%= step.distance %>m</li>
          <% }) %>
        </ol>
      <% } else if (steps) { %>
        <p>No route found!</p>
      <% } %>
    </div>

    <div id="features">

    </div>
  </div>



<% include ../partials/footer %>
